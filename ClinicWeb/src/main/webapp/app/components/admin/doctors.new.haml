.container
  .row
    .col-xs-12
      %form.form-horizontal{:role => "form", :'ng-submit' => 'submit()', :'form-validation' => ''}
        .form-group
          %label.control-label.col-sm-2{:for => "id"} Identyfikator lekarza:
          .col-sm-10
            %input#id.form-control{:placeholder => "Wpisz identyfikator", :type => "text", :'ng-model' => 'doctor.id'}
        .form-group
          %label.control-label.col-sm-2{:for => "name"} Imię lekarza:
          .col-sm-10
            %input#name.form-control{:placeholder => "Wpisz imię", :type => "text", :'ng-model' => 'doctor.doctor.name'}
        .form-group
          %label.control-label.col-sm-2{:for => "surname"} Nazwisko lekarza:
          .col-sm-10
            %input#surname.form-control{:placeholder => "Wpisz nazwisko", :type => "text", :'ng-model' => 'doctor.doctor.surname'}
        .form-group
          %label.control-label.col-sm-2{:for => "password"} Hasło:
          .col-sm-10
            %input#password.form-control{:placeholder => "Wpisz hasło", :type => "password", :'ng-model' => 'doctor.password'}
        .form-group
          %label.control-label.col-sm-2{:for => "specialities"} Specjalizacje:
          .col-sm-10
            %input#password.form-control{:placeholder => "Wpisz specjalizacje", :type => "text", :'ng-model' => 'specialities'}
        .form-group
          %label.control-label.col-sm-2{:for => "email"} E-mail:
          .col-sm-10
            %input#email.form-control{:placeholder => "Wpisz e-mail", :type => "email", :'ng-model' => 'doctor.email'}
        .form-group
          .col-sm-offset-2.col-sm-10
            %button.btn.btn-default{:type => "submit"} Dodaj
