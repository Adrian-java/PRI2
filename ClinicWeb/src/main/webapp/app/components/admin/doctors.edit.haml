.container
  .row
    .col-xs-12
      %form.form-horizontal{:role => "form", :'ng-submit' => 'update()', :'form-validation' => ''}
        .form-group
          %label.control-label.col-sm-2{:for => "name"} Imię lekarza:
          .col-sm-10
            %input#name.form-control{:placeholder => "Wpisz imię", :type => "text", :'ng-model' => 'doctor.name'}
        .form-group
          %label.control-label.col-sm-2{:for => "surname"} Nazwisko lekarza:
          .col-sm-10
            %input#surname.form-control{:placeholder => "Wpisz imię", :type => "text", :'ng-model' => 'doctor.surname'}
        .form-group
          .col-sm-offset-2.col-sm-10
            %button.btn.btn-default{:type => "submit"} Zapisz
