.container
  .row
    .col-xs-12
      %a{:'ui-sref' => 'receptionist-patients-new'}
        dodaj pacjenta
      %table.table.table-bordered
        %thead
          %tr
            %th
              Pesel
            %th
              Imię
            %th
              Nazwisko
            %th
              Akcje
        %tbody
          %tr{:'ng-repeat' => 'patient in patients'}
            %td
              %a{:'ui-sref' => 'receptionist-patients-show({patientId: patient.id})'}
                {{patient.id}}
            %td
              %a{:'ui-sref' => 'receptionist-patients-show({patientId: patient.id})'}
                {{patient.name}}
            %td
              %a{:'ui-sref' => 'receptionist-patients-show({patientId: patient.id})'}
                {{patient.surname}}
            %td
              %a.btn.btn-danger{:'ui-sref' => 'receptionist-patients-remove({patientId: patient.id})'}
                Usuń
              %a.btn.btn-primary{:'ui-sref' => 'receptionist-patients-edit({patientId: patient.id})'}
                Edytuj
              %a.btn.btn-primary{:'ui-sref' => 'receptionist-patients-visits({patientId: patient.id})'}
                Wizyty
