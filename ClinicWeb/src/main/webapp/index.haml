!!!
%html{"ng-app" => "clinic"}
  %head
    %meta{:charset => "UTF-8"}/
    %title Clinic
    %link{:href => "dist/all.css", :rel => "stylesheet", :type => "text/css"}/
  %body{:'ng-controller' => 'MainController'}
    / navigation
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .row
          .navbar-header
            %button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{"ui-sref" => "home"}
              %img{:src => "assets/img/logo.png"}/
          / Collection of nav links and other content for toggling
          #navbarCollapse.collapse.navbar-collapse
            /
              <ul class="nav navbar-nav">
              <li class="active"><a href="#">Przychodnia</a></li>
              </ul>
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{"ui-sref" => "add_visit"} Umów się
              %li
                %a{"ui-sref" => "services"} Usługi
              %li
                %a{"ui-sref" => "price_list"} Cennik
              %li
                %a{"ui-sref" => "contact"} Kontakt
              %li
                %a{:"ng-hide" => "loggedIn", :"ui-sref" => "register"} Zarejestruj się
              %li
                %a{"ng-show" => "loggedIn", "ui-sref" => "panel"} Panel
              %li
                %a{:href => "", "ng-click" => "open()", "ng-hide" => "loggedIn"} Zaloguj
              %li
                %a{:href => "#", "ng-click" => "logout()", "ng-show" => "loggedIn"} Wyloguj
    %div.main-container{:"ui-view" => ""}
    %script{:src => "assets/js/bower/bower.js"}
    %script{:src => "assets/js/app.module.js"}
    %script{:src => "assets/js/app.routes.js"}
    %script{:src => "assets/js/components/home/homeController.js"}
    %script{:src => "assets/js/components/login/loginModalController.js"}
    %script{:src => "assets/js/"}
    %script{:src => "assets/js/"}
    %script{:src => "assets/js/"}
    %script{:src => "assets/js/"}
